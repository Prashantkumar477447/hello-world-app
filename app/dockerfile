# Use official Node.js LTS image
FROM node:18-alpine

# Set working directory
WORKDIR /usr/src/app

# Copy package.json and install dependencies
COPY package*.json ./
RUN npm install --production

# Copy app source
COPY . .

# Expose port 8080 (Cloud Run expects this port)
EXPOSE 8080

# Start the app
CMD ["npm", "start"]
